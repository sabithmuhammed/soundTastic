<%- include("../layouts/userHeader") %> <%- include("../layouts/userNavbar") %>

<!-- SECTION -->
<div class="section mb-5">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- section title -->
      <div class="col-md-12">
        <div class="section-title">
          <h3 class="title">All products</h3>
        </div>
      </div>
      <!-- /section title -->
    </div>
    <!-- /row -->

    <!-- /container -->
  </div>

  <!-- /SECTION -->

  <!-- product -->

  <!-- SECTION -->
  <div class="section">
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- /shop -->
        <% if(!products.length>0){ %>
        <div class="col-md-12 col-xs-12 text-center">
          <h4>No products found</h4>
        </div>
        <% } %> <% products.forEach((item)=>{ %>
        <div class="col-md-3 col-xs-6">
          <div
            class="product"
            onclick="window.location.href='product/<%= item._id %>'"
          >
            <div class="product-img">
              <img src="/images/products/<%= item.images[0] %>" alt="" />
            </div>
            <div class="product-body">
              <p><%= item.category.name %></p>
              <p><%= item.brand %></p>
              <h5><%= item.name %></h5>
              <div class="price">
                <span class="original-price">&#8377;<%= item.price %></span>
                <span class="mrk-down"
                  ><strike>&#8377;<%= item.md_price %></strike></span
                >
              </div>
              <div class="add-to-cart-div">
                <% if(locals.user) { %>
                <div class="circle <%= wishlist?.includes(item._id)?'wishlist-active':'' %>"
                  data-addToWishlist
                  data-id="<%= item._id%>"
                  data-status="<%= wishlist?.includes(item._id)?'true':'false' %>"
                  >
                  <% if(wishlist?.includes(item._id)){ %><i
                    class="fa fa-heart-o"
                  ></i>
                  <% }else{ %><i class="fa-regular fa-heart"></i> <% } %>
                </div>
                <div class="circle" data-addToCart data-id="<%= item._id %>">
                  <i class="fa-solid fa-cart-shopping"></i>
                </div>
                <% }else{ %>
                <div
                  class="circle"
                  onclick="event.stopPropagation(); showLogin()"
                >
                  <i class="fa-regular fa-heart"></i>
                </div>
                <div
                  class="circle"
                  onclick="event.stopPropagation(); showLogin()"
                >
                  <i class="fa-solid fa-cart-shopping"></i>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <% }) %>

        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /SECTION -->

    <!-- product-end -->
    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-12 show-more">
            <div>
              <% if ( page > 1) { %>
              <a
                href="/shop?page=<%= page - 1 %>&search=<%= search %>&category=<%= category %>"
                class="pagination-btn"
                ><i class="fa-solid fa-chevron-left"></i
              ></a>
              <% }else{ %>
              <a class="pagination-disabled"
                ><i class="fa-solid fa-chevron-left"></i
              ></a>
              <%} %> <% if (page < totalPages) { %>
              <a
                href="/shop?page=<%= page + 1 %>&search=<%= search %>&category=<%= category %>"
                class="pagination-btn"
                ><i class="fa-solid fa-chevron-right"></i
              ></a>
              <% }else{ %>
              <a class="pagination-disabled"
                ><i class="fa-solid fa-chevron-right"></i
              ></a>
              <%} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/user/js/utils/navPages.js"></script>
<%- include("../layouts/userFooter") %>
