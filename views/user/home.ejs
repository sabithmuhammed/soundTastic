  <!-- SECTION -->
  <div class="section">
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        
        <!-- /shop -->
        <% products.forEach((item)=>{ %>
            <div class="col-md-3 col-xs-6">
                <div class="product" onclick="window.location.href='product/<%= item._id %>'">
                  <div class="product-img">
                    <img src="/images/products/<%= item.images[0] %>" alt="" />
                  </div>
                  <div class="product-body">
                    <p><%= item.category.name %></p>
                    <h5><%= item.name %></h5>
                    <div class="price">
                      <span class="original-price">&#8377;<%= item.price %></span>
                      <span class="mrk-down"><strike>&#8377;<%= item.md_price %></strike></span>
                    </div>
                    <div class="add-to-cart-div">
                      <% if(locals.user) { %>
                        <div class="circle" data-addToWishlist data-id="<%= item._id%>" data-status="false" ><i class="fa-regular fa-heart"></i></div>
                        <div class="circle" data-addToCart data-id="<%= item._id %>" >
                          <i class="fa-solid fa-cart-shopping"></i>
                        </div>
                        <% }else{ %>
                        <div class="circle" onclick="event.stopPropagation(); showLogin()"><i class="fa-regular fa-heart"></i></div>
                        <div class="circle" onclick="event.stopPropagation(); showLogin()">
                          <i class="fa-solid fa-cart-shopping"></i>
                        </div>
                        <% } %>
                    </div>
                  </div>
                </div>
              </div>

       <% }) %>

        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /SECTION -->

