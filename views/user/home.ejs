      <!-- /shop -->
      <!-- shop -->
      <div class="col-md-3 col-xs-6">
        <div class="shop">
          <div class="shop-img">
            <img src="/user/img/wired.webp" alt="" />
          </div>
          <div class="shop-body">
            <h3>Wired</h3>
            <a href="/shop?category=Wired" class="cta-btn"
              >Shop now <i class="fa fa-arrow-circle-right"></i
            ></a>
          </div>
        </div>
      </div>
      <!-- /shop -->

      <!-- shop -->
      <div class="col-md-3 col-xs-6">
        <div class="shop">
          <div class="shop-img">
            <img src="/user/img/wireless.webp" alt="" />
          </div>
          <div class="shop-body">
            <h3>Wireless</h3>
            <a href="/shop?category=Wireless" class="cta-btn"
              >Shop now <i class="fa fa-arrow-circle-right"></i
            ></a>
          </div>
