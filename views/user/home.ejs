      </div>
      <!-- /shop -->

      <!-- shop -->
      <div class="col-md-3 col-xs-6">
        <div class="shop">
          <div class="shop-img">
            <img src="/user/img/twireless.jpg" alt="" />
          </div>
          <div class="shop-body">
            <h3>Truly wireless</h3>
            <a href="/shop?category=Truly wireless" class="cta-btn"
              >Shop now <i class="fa fa-arrow-circle-right"></i
            ></a>
