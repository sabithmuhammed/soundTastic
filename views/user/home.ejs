        </div>
      </div>
      <!-- /shop -->
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->

<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- banner -->
      <div class="col-12 bg-danger banner">
        <div class="carousel__container">
          <% if(banner && banner.length >0){
            banner.forEach((item)=>{ %>
              
                <% if(item.link){ %>
                  <div class="carousel__item" onclick="window.location.href='<%= item.link %>'">
                <% }else{ %>
                  <div class="carousel__item">
               <% } %>
                <img
                  src="/images/banners/<%= item.image %>"
                  alt=""
                  loading="lazy"
                />
                <% if(item.title || item.description){ %>
                <div class="banner__text">
                  <% if(item.title){ %>
                    <div class="banner__title"><%= item.title %></div>
                  <% }%>
                  <% if(item.description){ %>
                    <div class="banner__description"><%= item.description %></div>
                  <% }%>
                  
                  
                </div>
                <% } %>
              </div>
          <%  })
          } %>
          
          <div class="carousel__nav"></div>
        </div>
      </div>
      <!-- /banner -->
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->

<!-- SECTION -->
<div class="section mb-5">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- section title -->
      <div class="col-md-12">
        <div class="section-title">
          <h3 class="title">New Products</h3>
        </div>
      </div>
      <!-- /section title -->
    </div>
    <!-- /row -->

    <!-- /container -->
  </div>

  <!-- /SECTION -->

  <!-- product -->

  <!-- SECTION -->
  <div class="section">
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- /shop -->
        <% products.forEach((item)=>{ %>
        <div class="col-md-3 col-xs-6">
          <div
            class="product"
            onclick="window.location.href='product/<%= item._id %>'"
          >
            <div class="product-img">
              <img src="/images/products/<%= item.images[0] %>" alt="" />
            </div>
            <div class="product-body">
              <p><%= item.category.name %></p>
              <h5><%= item.name %></h5>
              <div class="price">
                <span class="original-price">&#8377;<%= item.price %></span>
                <span class="mrk-down"
                  ><strike>&#8377;<%= item.md_price %></strike></span
                >
              </div>
              <div class="add-to-cart-div">
                <% if(locals.user) { %>
                <div
                  class="circle <%= wishlist?.includes(item._id)?'wishlist-active':'' %>"
                  data-addToWishlist
                  data-id="<%= item._id%>"
                  data-status="<%= wishlist?.includes(item._id)?'true':'false' %>"
                >
                  <% if(wishlist?.includes(item._id)){ %><i
                    class="fa fa-heart-o"
                  ></i>
                  <% }else{ %><i class="fa-regular fa-heart"></i> <% } %>
                </div>
                <div class="circle" data-addToCart data-id="<%= item._id %>">
                  <i class="fa-solid fa-cart-shopping"></i>
                </div>
                <% }else{ %>
                <div
                  class="circle"
                  onclick="event.stopPropagation(); showLogin()"
                >
                  <i class="fa-regular fa-heart"></i>
                </div>
                <div
                  class="circle"
                  onclick="event.stopPropagation(); showLogin()"
                >
                  <i class="fa-solid fa-cart-shopping"></i>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <% }) %>

        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /SECTION -->

    <!-- product-end -->
    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-12 show-more">
            <a href="/shop" class="primary-btn mx-auto">SHOW MORE</a>
          </div>
        </div>
      </div>
    </div>
    <!-- SECTION -->
    
    <!-- /SECTION -->
  </div>
</div>
<script src="/user/js/utils/navPages.js"></script>
<%- include("../layouts/userFooter") %>
