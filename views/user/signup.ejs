<%- include("../layouts/userHeader") %>

<div class="container-fluid h-100">
    <div class="row h-100 justify-content-center">
      <div
        class="col-12 col-lg-5 d-flex justify-content-center align-items-center"
      >
        <form action="/signup" method="post" class="login  signup py-3">
          <h3 class="red">Sign up</h3>

          <div class="login-container px-4">
            <div class="login-input mb-3">
              <div class="error">error</div>
            </div>
            <div class="login-input mb-3">
              <label for="name">Name</label>
              <input type="text" name="name" id="name" />
            </div>
            <div class="login-input mb-3">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" />
            </div><div class="login-input mb-3">
              <label for="phone">Phone</label>
              <input type="number" name="phone" id="phone" />
            </div>
            <div class="login-input mb-3">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" />
              <div class="eye-icon" id="show-password"><i class="fa-solid fa-eye-slash"></i></div>
            </div>
            <div class="login-input mb-3">
              <label for="cnfrm-password">Confirm password</label>
              <input type="password" name="cnfpassword" id="cnfrm-password" />
              <div class="eye-icon" id="show-cnfrm-password"><i class="fa-solid fa-eye-slash"></i></div>
            </div>
          </div>

          <button class="btn btn-red">Sign up</button>
          <p class="text-center red">
            Already have an account? <a href="/login">Login</a>
          </p>
        </form>
      </div>
    </div>
  </div>

<script src="/js/login.js"></script>
<%- include("../layouts/userFooter") %>
