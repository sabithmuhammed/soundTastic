<%- include("../layouts/userHeader") %> 
<%- include("../layouts/userNavbar") %>

<!-- SECTION -->
<div class="section ">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- section title -->
      <div class="col-md-6 product-show">
        <div class="image-container">
          <div class="image-list">
            <div class="image-thumb">
                <img src="/images/products/<%= product.images[0] %>" alt="" onclick="changeImage(this)" class="image-thumb-active">
            </div>
            <div class="image-thumb">
                <img src="/images/products/<%= product.images[1] %>" alt="" onclick="changeImage(this)">
            </div>
            <div class="image-thumb">
                <img src="/images/products/<%= product.images[2] %>" alt="" onclick="changeImage(this)">
            </div>
            <div class="image-thumb">
                <img src="/images/products/<%= product.images[3] %>" alt="" onclick="changeImage(this)">
            </div>
          </div>
          <div class="image-div">
            <img src="/images/products/<%= product.images[0] %>" alt="" />
            <div class="lens"></div>
            <div class="zoom"></div>
          </div>
        </div>
      </div>

      <div class="col-md-6 product-details col-12">
        <div class="prod-name">
          <h3><%= product.name %></h3>
        </div>
        <div class="prod-brand">
          <h5>Brand : <%= product.brand %></h5>
          <h5 class="<%= stock.lowStock? `out-of-stock`:`in-stock` %>"><%= stock.status %></h5>
        </div>
        <div class="prod-price">
          <h3>&#8377;<%= product.price %></h3> <h5><strike>&#8377;<%= product.md_price %></strike></h5>
        </div>
        <div class="prod-buttons">
          <button class="btn yellow-btn">Add to wishlist</button>
          <button class="btn primary-btn">Add to Cart</button>
        </div>
        <div class="prod-review">
          <h5>Rating : 4.5 / 5 </h5> <button class="btn show-all-btn">Show all reviews</button>
        </div>
        <div class="prod-description text-wrap">
          <p><%= product.description %></p>
        </div>
      </div>
      <!-- /section title -->
    </div>
    <!-- /row -->

    <!-- /container -->
  </div>

  <!-- /SECTION -->
</div>


<script src="/user/js/utils/imageZoom.js"></script>
</body></html>