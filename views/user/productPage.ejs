<%- include("../layouts/userHeader") %> <%- include("../layouts/userNavbar") %>

<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- section title -->
      <div class="col-md-6 product-show col-xs-12">
        <div class="image-container">
          <div class="image-list">
            <div class="image-thumb">
              <img
                src="/images/products/<%= product.images[0] %>"
                alt=""
                onclick="changeImage(this)"
                class="image-thumb-active"
              />
            </div>
            <div class="image-thumb">
              <img
                src="/images/products/<%= product.images[1] %>"
                alt=""
                onclick="changeImage(this)"
              />
            </div>
            <div class="image-thumb">
              <img
                src="/images/products/<%= product.images[2] %>"
                alt=""
                onclick="changeImage(this)"
              />
            </div>
            <div class="image-thumb">
              <img
                src="/images/products/<%= product.images[3] %>"
                alt=""
                onclick="changeImage(this)"
              />
            </div>
          </div>
          <div class="image-div">
            <img src="/images/products/<%= product.images[0] %>" alt="" />
            <div class="lens"></div>
            <div class="zoom"></div>
          </div>
        </div>
      </div>

      <div class="col-md-6 product-details col-xs-12">
        <div class="prod-name">
          <h3><%= product.name %></h3>
        </div>
        <div class="prod-brand">
          <h5>Brand : <%= product.brand %></h5>
          <h5 class="<%= stock.lowStock? `out-of-stock`:`in-stock` %> m-left">
            <%= stock.status %>
          </h5>
        </div>
        <div class="prod-price">
          <h3>&#8377;<%= product.price %></h3>
          <h5><strike>&#8377;<%= product.md_price %></strike></h5>
        </div>
        <div
          class="prod-buttons" 
        >
          <% if(locals.user) { %>
          <button class="btn yellow-btn"
          data-prodpage="true"
          data-addToWishlist
          data-id="<%= product._id%>"
          data-status="<%= wishlist?.includes(product._id)?'true':'false' %>"
          >
            <% if(wishlist?.includes(product._id)){ %> REMOVE FROM WISHLIST <%
            }else{ %> ADD TO WISHLIST <% } %>
          </button>
          <button
            class="btn primary-btn"
            data-addToCart
            data-id="<%= product._id %>"
          >
            Add to Cart
          </button>
          <% }else{ %>
          <button class="btn yellow-btn" onclick="showLogin()">
            Add to wishlist
          </button>
          <button class="btn primary-btn" onclick="showLogin()">
            Add to Cart
          </button>
          <% } %>
        </div>
        <div class="prod-review">
          <h5>Rating : 4.5 / 5</h5>
        </div>
        <div class="prod-description text-wrap">
          <p><%= product.description %></p>
        </div>
      </div>
      <!-- /section title -->
    </div>
    <!-- /row -->

    <!-- /container -->
  </div>

  <!-- /SECTION -->
</div>

