<%- include("../layouts/adminHeader") %>

<!--  Main wrapper -->
<div class="body-wrapper">
  <%- include("../layouts/adminNavbar") %>
  <style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 400px;
        margin-top: 50px;
    }

    form {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        font-size: 16px;
    }

    h2 {
        color: #007bff;
    }

    label {
        color: #495057;
    }

    button {
        background-color: #007bff;
        color: #ffffff;
        font-weight: bold;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>
  <div class="container-fluid">
    <div class="row justify-content-center mb-3">
        <div class="col-md-8">
        <h2>Add Coupon</h2>
        <form action="/add-coupon" method="post" id="coupon-form">
            <div class="form-group d-flex justify-content-center">
                  <p class="text-danger" id="error"></p>
            </div>
            <div class="form-group">
                <label for="couponCode">Coupon Code:</label>
                <div class="">

                <input type="text" class="form-control" id="userInput" placeholder="Enter coupon code (Max-10 charecters)" required>
            
            </div>
    
            <div class="form-group"> <div class="form-group">
                <label for="minimumSpend">Discount Amount:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&#8377;</span>
                    </div>
                    <input type="number" class="form-control" id="minimumSpend" placeholder="Enter discount amount" required>
                </div>
            </div>
            </div>
    
            <div class="form-group">
                <label for="minimumSpend">Minimum Spend:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&#8377;</span>
                    </div>
                    <input type="number" class="form-control" id="minimumSpend" placeholder="Enter minimum spend amount" required>
                </div>
            </div>
            <div class="form-group">
                <label for="validFrom">Valid From:</label>
                <input type="date" class="form-control" id="validFrom" required>
            </div>
            <div class="form-group">
                <label for="expiryDate">Expiry Date:</label>
                <input type="date" class="form-control" id="expiryDate" required>
            </div>
    
            <button type="submit" class="btn btn-primary">Add Coupon</button>
        </form>
    </div>
    </div>
  </div>
</div>

<script>
   const couponForm=document.querySelector('#coupon-form')
   const couponValidation = (event)=>{
    event.preventDefault();
    const error=document.querySelector('#error')
    const [coupon,discount,minimum] =event.target;
    const couponVal=coupon.value.trim();
    const discountVal=discount.value.trim();
    const minimumVal=minimum.value.trim();
    console.log(couponVal,discountVal,minimumVal)
    if(!couponVal || !discountVal || !minimumVal){
        error.innerText="Fill all the fields"
        
    }
   }
   couponForm.addEventListener('submit'.couponValidation)
</script>

